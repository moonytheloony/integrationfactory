{
  "$schema": "http://datafactories.schema.management.azure.com/schemas/2015-08-01/Microsoft.DataFactory.Table.json",
  "name": "PremiseSystemDataTable",
  "properties": {
    "type": "FileShare",
    "linkedServiceName": "OnPremisesFileSystemLinkedService",
    "typeProperties": {
      "folderPath": "DRIVE LETTER:\\FOLDER PATH TO YOUR BATCH FILE",
      "fileName": "SampleData-{Year}-{Month}-{Day}.csv",
      "partitionedBy": [
        {
          "name": "Year",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "yyyy"
          }
        },
        {
          "name": "Month",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "MM"
          }
        },
        {
          "name": "Day",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "dd"
          }
        }
      ]
    },
    "structure": [
      {
        "name": "OrderDate",
        "type": "Datetime"
      },
      {
        "name": "Region",
        "type": "String"
      },
      {
        "name": "Rep",
        "type": "String"
      },
      {
        "name": "Item",
        "type": "String"
      },
      {
        "name": "Units",
        "type": "Int32"
      },
      {
        "name": "Unit Cost",
        "type": "Decimal"
      },
      {
        "name": "Total",
        "type": "Decimal"
      }
    ],
    "external": true,
    "availability": {
      "frequency": "Day",
      "interval": 1
    }
  }
}